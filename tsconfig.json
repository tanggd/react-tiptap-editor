{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": false,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"]
}